{
  "manifest_version": 2,

  "name": "Kilxn",
  "description": "Kilect image URLs as you browse for later use!",
  "version": "1.0.1.1",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/options.html"
  },
  "background": {
    "scripts": ["js/kilect.js"],
    "matches": ["http*"],
    "exclude_globs": ["*://chrome.google.com/webstore/*"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "icons": {
    "16" : "img/icon16.png",
    "19" : "img/icon.png",
    "48" : "img/icon48.png",
    "128" : "img/icon128.png"
  },
  "options_page": "html/options.html"
}